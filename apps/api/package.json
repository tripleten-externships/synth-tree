{
  "name": "api",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "pnpm generate && tsc -p tsconfig.build.json",
    "generate": "prisma generate",
    "start": "node dist/index.js",
    "emit:schema": "ts-node -r tsconfig-paths/register scripts/emit-schema.ts",
    "codegen": "pnpm run emit:schema && graphql-codegen --config codegen.yml",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@pothos/core": "^4.10.0",
    "@pothos/plugin-errors": "^4.7.0",
    "@pothos/plugin-prisma": "^4.12.0",
    "@pothos/plugin-relay": "^4.6.2",
    "@pothos/plugin-scope-auth": "^4.1.6",
    "@pothos/plugin-validation": "^4.2.0",
    "@skilltree/api-types": "workspace:*",
    "apollo-server": "^3.13.0",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.5.0",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.25.0",
    "graphql-tag": "^2.12.6",
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.1",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@graphql-codegen/typescript-resolvers": "^5.0.1",
    "@prisma/client": "^6.17.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "prisma-generator-pothos-codegen": "^0.7.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
