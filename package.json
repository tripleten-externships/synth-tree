{
  "name": "skilltree-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:validate": "pnpm --filter ./apps/api prisma validate",
    "db:migrate:dev": "pnpm --filter ./apps/api prisma migrate dev",
    "db:studio": "pnpm --filter ./apps/api prisma studio",
    "dev": "pnpm db:start && pnpm --parallel --filter './apps/admin-dashboard' --filter './apps/client-frontend' --filter './apps/api' dev",
    "lint": "pnpm --filter ./apps/admin-dashboard lint",
    "type-check": "pnpm --filter ./apps/admin-dashboard exec tsc --noEmit && pnpm --filter ./apps/client-frontend exec tsc --noEmit && pnpm --filter ./apps/api exec tsc --noEmit && pnpm --filter ./apps/infra exec tsc --noEmit",
    "test": "pnpm --filter ./apps/infra test",
    "test:integration": "pnpm -r --if-present test:integration",
    "storybook": "pnpm --filter ./packages/ui storybook",
    "build": "pnpm -r build"
  },
  "packageManager": "pnpm@10.17.1"
}
